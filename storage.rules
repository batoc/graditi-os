rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Imágenes de herramientas
    match /tools/{toolId}/{fileName} {
      allow read: if true; // Cualquiera puede ver las imágenes
      allow write: if request.auth != null // Solo usuarios autenticados
                   && request.resource.size < 5 * 1024 * 1024 // Máximo 5MB
                   && request.resource.contentType.matches('image/.*'); // Solo imágenes
      allow delete: if request.auth != null;
    }
    
    // Imágenes de colaboradores
    match /colaboradores/{colaboradorId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024 // Máximo 5MB
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null;
    }
    
    // Adjuntos de mantenimiento
    match /maintenance/{maintenanceId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024; // Máximo 10MB
      allow delete: if request.auth != null;
    }
    
    // Denegar todo lo demás por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
